<!DOCTYPE html>
<html>
    <head>
        <% include ../static/partials/head.ejs %>
    </head>

    <body>
        <% include ../static/partials/navbar.ejs %> 
        <% include ../static/partials/sideBar.ejs %>

        

        <main class="container">
            <h1><%= day.date %> </h1>

            <ul class="list-group">
                <% children.forEach((child) => { %>
                    <% if(currentUser && (currentUser.id === child.userId)) { %>
                        <li class="list-group-item"> 

                            <form action="/mealOrder/newOrder">
                                <div class="form-group">
                                    <%= child.firstName %> 
                                    <input type="hidden" name="childId" value=<%= child.id%>>
                                </div>
                                <div class="mealoptions">
                                    <input type="checkbox" name="mealOrdered" value="1"><h3>Option 1: </h3>
                                    <h5><%= day.mealOne %></h5>
                                    <%= day.mealOneDesc %>

                                    <input type="checkbox" name="mealOrdered" value="2"><h3>Option 2: </h3>
                                    <h5> <%= day.mealTwo %></h5>
                                    <%= day.mealTwoDesc %>

                                    <input type="checkbox" name="mealOrdered" value="3"><h3>Option 3: </h3>
                                    <h5> <%= day.mealThree %></h5>
                                    <%= day.mealThreeDesc %>
                                </div>

                                <div class="form-group">
                                    <input type="hidden" name="userId" value=<%= child.userId%>>
                                </div>

                                <div class="form-group">
                                    <input type="hidden" name="dayOrdered" value=<%= day.date%>>
                                </div>

                            </form>
                        </li>
                        

                        
                    <% } %>
                <% }) %>
            </ul>
            
        </main>
        
    </body>
</html>