<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>
    <% include ../static/partials/sideBar.ejs %>

    <main class="container">
        
        <div class="pageHead">
            <h1>Edit Child</h1>
        </div>
        
        <div class="editChildForm">
                <form action="/child/<%= child.id %>/update" method="post">
                    <div class="form-group">
                        <label for="firstName">First Name</label>
                        <input value="<%= child.firstName %>" type="text" class="form-control" name="firstName">
                    </div>
        
                    <div class="form-group">
                        <label for="lastName">Last Name</label>
                        <input value="<%= child.lastName %>" type="text" class="form-control" name="lastName">
                    </div>
        
                    <div class="form-group">
                        <label for="school">School</label>
                        <input value="<%= child.school %>" type="text" class="form-control" name="school">
                    </div>
                    <div class="childEditButtons">
                        <button type="submit" class="btn confirm-button">Update</button>
                        <a href="/child" class="btn second-btn" >Cancel</a>
                    </div>
                </form>
        </div>

        
        <div class="childDelete">
            <form style="display:initial"
                action= "/child/<%= child.id %>/destroy"
                method= "POST">
                <button type="submit" class="btn childDelete-btn">Delete</button>
          </form>
        </div>
        
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>