<!DOCTYPE html>
<html>
    <head>
        <% include ../static/partials/head.ejs %>
    </head>
    <body>
        <% include ../static/partials/navbar.ejs %>
        <% include ../static/partials/sideBar.ejs %> 

        <main class="container">
            <h1>Messages</h1>
            <a href="/emails/inbox" class="btn btn-primary btn-lg">Inbox</a>
            <a href="/emails/new" class="btn btn-primary btn-lg">New Message</a>
            <br><br>
            <ul class="list-group">
                <% emails.forEach((email) => { %>
                    <% if(currentUser && (currentUser.id === email.userId)) { %>
                        <li class="list-group-item">
                            <a href="/emails/<%= email.id %>"> <%= email.subject %></a>
                        </li>
                    <% } %>
                    
                <% }) %>
            </ul>
        </main>
    </body>
</html>