<!DOCTYPE html>
<html>
    <head>
        <% include ../static/partials/head.ejs %>
    </head>
    <body>
        <% include ../static/partials/navbar.ejs %>
        <% include ../static/partials/sideBar.ejs %>

        <main class="container">
            <h1>New Message</h1>

            <form action="/emails/create" method="post">
                <div class= "form-group">
                    <label for="recipient">To:</label>
                    <input type="text" class="form-control" name="recipient" placeholder="User Name">
                </div>
                <div class="form-group">
                    <label for="sender">From:</label>
                    <input type="hidden" name="sender" value=<%= user.firstName%>>
                    <h6><%= user.firstName %> </h6>
                </div>
                <div class="form-group">
                    <label for="subject">Subject:</label>
                    <input type="text" class="form-control" name="subject" aria-describedby="subjectHelp" placeholder="Subject">
                </div>
                <div class="form-group">
                    <label for="body">Body</label>
                    <textarea rows="6" class="form-control" name="body" placeholder="Write your message here..."></textarea>
                </div>
                

                <button type="submit" class="btn btn-primary">Send</button>
            </form>

        </main>

        <% include ../static/partials/baseScripts.ejs %>
    </body>
</html>