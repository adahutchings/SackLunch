<!DOCTYPE html>
<html>
    <head>
        <% include ../static/partials/head.ejs %>
    </head>
    <body>
        <% include ../static/partials/navbar.ejs %>
        <% include ../static/partials/sideBar.ejs %>

        <main class="container">
            <div class="pageHead">
                <h1>New Message</h1>
            </div>
            
            <div class="newEmail">

            <form action="/emails/create" method="post">
                <div class="newEmailHeader"></div>
                <div class= "form-group">
                    <h3><label for="recipient">To:</label></h3>
                    Admin
                </div>
                
                
                <div class="form-group">
                    <h3><label for="sender">From:</label></h3>
                    <input type="hidden" name="sender" value=<%= user.firstName%>>
                    <%= user.firstName %> 
                </div>
                 
                
                <div class="form-group">
                    <h4><label for="subject">Subject:</label></h4>
                    <input type="text" class="form-control" name="subject" aria-describedby="subjectHelp" placeholder="Subject">
                </div>
                
                <div class="form-group">
                    <h4><label for="body">Body</label></h4>
                    <textarea rows="6" class="form-control" name="body" placeholder="Write your message here..."></textarea>
                </div>
                </div>
                

                <button type="submit" class="btn confirm-button" id="sendEmail">Send</button>
            </form>

        </main>

        <% include ../static/partials/baseScripts.ejs %>
    </body>
</html>